material Voxelize
{
	vertex_shader
	{
		file voxelizing2.hlsl
		entry VS_Main
		profile vs_6_6
	}

	geometry_shader
	{
		file voxelizing2.hlsl
		entry GS_Main
		profile gs_6_6
	}

	pixel_shader
	{
		file voxelizing2.hlsl
		entry PS_Main
		profile ps_6_6
	}

	culling none
	depth off

	texture Diffuse
	{
		file white.dds
	}
}

material VoxelizeInstancing : Voxelize
{
	shader_defines INSTANCED
}

material VoxelizeGridTerrain : Voxelize
{
	conservative_rasterization
	shader_defines GRID
}