material HeightmapGrid abstract
{
	vertex_shader
	{
		file heightmapGridShading.hlsl
		entry VSMain
		profile vs_6_6
	}

	pixel_shader
	{
		file heightmapGridShading.hlsl
		entry PSMain
		profile ps_6_6
	}

	texture Heightmap
	texture Normalmap

	shader_defines GRID_PADDING

	technique Voxelize VoxelizeGridTerrain
	technique EntityId HeightmapGridEntityId
	technique Depth HeightmapGridDepth
}

material HeightmapGridEntityId : HeightmapGrid
{
	pixel_shader
	{
		file heightmapGridShading.hlsl
		entry PSMainEntityId
		profile ps_6_6
	}

	shader_defines ENTITY_ID
}

material HeightmapGridDepth : HeightmapGrid
{
	vertex_shader
	{
		file heightmapGridShading.hlsl
		entry VSMain
		profile vs_6_6
	}

	pixel_shader skip

	texture Diffuse
	{
		file SilveryBlue.dds
	}

	texture Grass
	{
		file grass.dds
	}

	shader_defines GRID_PADDING
	culling none //long distance shadows
}

material DarkGreenGrid : HeightmapGrid
{
	texture Diffuse
	{
		file SilveryBlue.dds
	}

	texture Grass
	{
		file grass.dds
	}

	texture Normal
	{
		file SilveryBlue_NRM.png
	}
	
	texture NormalGrass
	{
		file grass_NRM.png
	}

	texture Spread
	{
		file spread.png
	}
}
